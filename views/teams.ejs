<!DOCTYPE html>
<html>
<head>
  <title>F1 Driver List</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/teams.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="header">
    <div class="back">
      <a href="/"> Home </a>
    </div>
    <div class="logo"><h1>F1 Driver Data Details</h1></div>
  </div>

  <% teams.forEach(function(team) { %>
    <div class="team-data">
        <div class="column"><img class="brand-logo" src=<%- team.teamlogo %>></div>
        <div class="column">
            <p>Team name : <%- team.name %></p>
            <p>Power unit : <%- team.engine %></p>
        </div>
        
    </div>
  <% }); %>
  <div class="driver-details">
    <h1>Drivers</h1>
    <% drivers.forEach(function(driver) { %>
        <div class="driver-column">
            <img class="driver-photo" src=<%- driver.photoURL %>>
        </div>
        <div class="column">
            <h2><%- driver.name %></h2>
            <p>Nationality    : <%- driver.country %></p>
            <p>Age            : <%- driver.age %></p>
        </div>
      </div>
    <% }); %>
  </div> 
</body>
</html>