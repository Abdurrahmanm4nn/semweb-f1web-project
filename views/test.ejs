<!DOCTYPE html>
<html>
<head>
  <title>F1 Driver List</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/listings.css">
  <script type="text/javascript" src="javascripts/style.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="header">
    <div class="back">
      <a href="/"> Home </a>
    </div>
    <div class="logo"><h1>F1 Driver Lists</h1></div>
  </div>
  
  <div class="util">
    <div class="dropdown">
      <button onclick="showDropdownMenus()" class="dropbtn">View By Teams</button>
      <div id="team-dropdown" class="dropdown-content">
        <% teams.forEach(function(team) { %>
          <% link = "/data/teams/" + team.name %>
          <a href=<%- link %>><%- team.name %></a>
        <% }); %>
      </div>
    </div>
    <div class="search-container">
      <form action="/data" method="get">
        <input type="text" placeholder="Search.." name="search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
  </div>

  <div class="driver-listings">
    <% drivers.forEach(function(driver) { %>
      <% link = "/data/details/" + driver.name %>
      <div class="driver-listings-data">
        <a href=<%- link %>>
          <img class="driver-photo" src=<%- driver.photoURL %>>
          <h2><%- driver.name %></h2>
          <h4>Team : <%- driver.team  %> </h4>
          <h4>Nationality    : <%- driver.country %></h4>
        </a>
      </div>  
    <% }); %> 
  </div>
</body>
</html>