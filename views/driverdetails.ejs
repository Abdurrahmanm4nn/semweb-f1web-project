<!DOCTYPE html>
<html>
<head>
  <title>F1 Driver List</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="header">
    <div class="back">
      <a href="/"> Home </a>
    </div>
    <div class="logo"><h1>F1 Driver Data Details</h1></div>
  </div>

    <% drivers.forEach(function(driver) { %>
      <div class="driver-details">
        <div class="column">
            <img class="driver-photo" src=<%- driver.photoURL %>>
        </div>
        <div class="column">
            <h2><%- driver.name %></h2>
            <h3>Team : <%- driver.team  %> </h3>
            <p>Nationality    : <%- driver.country %></p>
            <p>Date of Birth  : <%- driver.birthdate %></p>
            <p>Age            : <%- driver.age %></p>
            <p>Instagram      : <%- driver.instagram %></p>
        </div>
      </div>
    <% }); %> 
</body>
</html>